{% extends 'base.html.twig' %}
{% block title %}
    {{ local.nombre }}
{% endblock %}

{% block body %}
    <h1>Editar {{ local.nombre }}</h1>
    {{form_start(form)}}
    {{ form_widget(form) }}
    <div class="row">
    <div class="col-10"></div>
    <div class="col-2">
        <button type="submit" class="btn btn-primary" ><i class="fa fa-edit"></i> Editar</button>
        <a href="{{ path('eliminar_local', {'id': local.id }) }}" class="btn btn-danger" ><i class="fa fa-trash"></i> Eliminar</a>
    </div>
    </div>
    {{ form_end(form) }}

{% endblock %}


